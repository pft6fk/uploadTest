@using uploadTest.Shared

<MudTable Items="@Files" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>File Name</MudTh>
        <MudTh>File location</MudTh>
        <MudTh>ID</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nr">@context.DocName.Single()</MudTd>
        <MudTd DataLabel="Sign">@context.Path</MudTd>
        <MudTd DataLabel="Name">@context.Id</MudTd>
        <MudTd DataLabel="Position" >
            <MudIconButton Icon="@Icons.Material.Filled.Download" ></MudIconButton><MudIconButton Icon="@Icons.Material.Filled.FileOpen"></MudIconButton><MudIconButton Icon="@Icons.Material.Filled.Delete"></MudIconButton>
        </MudTd>
    </RowTemplate>
</MudTable>
<MudSwitch @bind-Checked="_loading">Show Loading</MudSwitch>

@code {
    [Parameter]
    public List<IndexFields> Files { get; set; } = new();
    private bool _hidePosition;
    private bool _loading;

    protected override async Task OnInitializedAsync()
    {

    }

}