@using uploadTest.Shared

<MudTable Items="@Files" Hover="true" Breakpoint="Breakpoint.Sm" Bordered="true" HorizontalScrollbar="true">
    <ColGroup>
        <col style="width: 50px;"/>
        <col style="width: 60%;"/>
        <col style="width: 60px;"/>
        <col style="width: 15%;"/>
        @*<col style="width: 50px;"/>*@
        <col style="width: 50px;"/>
        <col style="width: 20%;"/>
    </ColGroup>
    <HeaderContent>
        <MudTh >ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Size(bytes)</MudTh>
        <MudTh>Modified</MudTh>
        @*<MudTh>Location</MudTh>*@
        <MudTh>Author</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd >@context.Id</MudTd>
        <MudTd >@context.DocName.Single()</MudTd>
        <MudTd >@context.DocSize.Single()</MudTd>
        <MudTd >@context.DocModifiedDate.Single()</MudTd>
        @*<MudTd >@context.Path</MudTd>*@
        <MudTd >@if (@context.DocAuthor != null)
            {
                @context.DocAuthor.Single()
            }
            else
            {
                 
            }
            </MudTd>
        <MudTd >
            <MudIconButton Icon="@Icons.Material.Filled.Download"></MudIconButton>
            <MudIconButton Icon="@Icons.Material.Filled.FileOpen"></MudIconButton>
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="@Color.Warning"></MudIconButton>
        </MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter]
    public List<IndexFields> Files { get; set; } = new();
    private bool _hidePosition;
    private bool _loading;

    protected override async Task OnInitializedAsync()
    {

    }

}